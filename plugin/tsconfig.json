{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES2020",
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "bundler",
        "importHelpers": true,
        "isolatedModules": true,
        "strictNullChecks": true,
        "lib": ["ES2020", "DOM"]
    },
    "include": ["src/**/*.ts"]
}
